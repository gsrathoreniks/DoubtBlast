<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="niks.doubtblast.com.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.50"
            android:weightSum="1">
            <android.support.v7.widget.CardView
                android:id="@+id/cq1"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:elevation="100dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.50"
                android:backgroundTint="#c7c7c7"
                android:onClick="onClickDBT">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/path172"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:textSize="28dp"
                    android:textStyle="bold|italic"
                    android:text="CS Doubts"
                    android:gravity="bottom"
                    android:textAlignment="center"
                    />

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.50"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cq6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:layout_weight="0.50"
                android:longClickable="false"
                android:backgroundTint="#ff9292"
                android:onClick="onClickOOP">
                <TextView
                    android:textSize="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="OOP"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:onClick="onCLickOOp"/>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cq3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="100dp"
                android:layout_weight="0.50"
                android:backgroundTint="#46c4f2"
                android:onClick="onClickDSA">
                <TextView
                    android:textSize="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="DSA"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textIsSelectable="false"
                    android:onClick="onClickDSA"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0.50"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.50"
            android:weightSum="1">

            <android.support.v7.widget.CardView
                android:id="@+id/cq5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="100dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="0.50"
                android:backgroundTint="#ff9292"
                android:onClick="onasset">
                <TextView
                    android:textSize="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="PSOOP"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textIsSelectable="false"
                    android:textStyle="bold"
                    android:onClick="onClickgg"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cq7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="100dp"
                android:layout_weight="0.50"
                android:layout_marginRight="3dp"
                android:backgroundTint="#46c4f2"
                >
                <TextView
                    android:textSize="30dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="PL"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_vertical"
                    android:textAlignment="center"
                    android:textIsSelectable="false"
                    android:textStyle="bold"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:id="@+id/cq4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="100dp"
            android:layout_weight="0.50"
            android:layout_marginTop="3dp"
            android:backgroundTint="#c7c7c7"
            android:onClick="onClickNEW">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/path173"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textSize="28dp"
                android:textStyle="bold|italic"
                android:text="IT Doubts"
                android:gravity="bottom"
                android:textAlignment="center"/>

        </android.support.v7.widget.CardView>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
